<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marvel.challenge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.marvel.challenge.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarvelChallenge"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.marvel.challenge.presentation.splash.SplashActivity"
            android:theme="@style/Theme.MarvelChallenge.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.marvel.challenge.presentation.listcharacters.ListCharactersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MarvelChallenge.NoActionBar" />

        <activity
            android:name="com.marvel.challenge.presentation.characterdetails.CharacterDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MarvelChallenge.NoActionBar" />
    </application>

</manifest>